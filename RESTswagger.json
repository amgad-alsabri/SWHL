{
  "swagger": "2.0",
  "info": {
    "title": "SharePoint List Item Creation",
    "version": "1.0"
  },
  "host": "traveflow.traveport-test.de",
  "schemes": ["https"],
  "basePath": "/_api",
  "paths": {
    "/web/lists/GetByTitle/{ListTitle}/items": {
      "post": {
        "summary": "Create a new item in a SharePoint list",
        "parameters": [
          {
            "name": "ListTitle",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "__metadata": {
                  "type":": {
                      "type": "string"
                    }
                  }
                },
                "Title": {
                  "type": "string"
                },
                "CustomField1": {
                  "type": "string"
                },
                "CustomField2": {
                  "type": "string"
                }
              },
              "required": ["__metadata", "Title"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  }
}